server {
    listen 80;
    listen [::]:80;
    root /var/www/local;
    server_name  homeapps.itsshedtime.com;

    listen 443 ssl;

    # RSA certificate
    ssl_certificate /etc/letsencrypt/live/homeapps.itsshedtime.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/homeapps.itsshedtime.com/privkey.pem;

    # Redirect non-https traffic to https
    if ($scheme != "https") {
        return 301 https://$host$request_uri;
    }

    location / {
        return 400;
    }

    location = /icalfilterproxy/liveoak {
        proxy_pass http://127.0.0.1:8101/liveoak?key=$arg_key;
        proxy_method GET;
        proxy_pass_request_headers off;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $remote_addr;
    }

}

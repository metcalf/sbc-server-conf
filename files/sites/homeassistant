server {
    listen 80;
    listen [::]:80;
    root /var/www/local;
    server_name  homeassistant.itsshedtime.com;

    listen 443 ssl;

    # RSA certificate
    ssl_certificate /etc/letsencrypt/live/homeassistant.itsshedtime.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/homeassistant.itsshedtime.com/privkey.pem;

    # Redirect non-https traffic to https
    if ($scheme != "https") {
        return 301 https://$host$request_uri;
    }

    location / {
        proxy_pass http://127.0.0.1:8123;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
    }

    location = /custom-api/on_vacation {
        proxy_pass http://127.0.0.1:8123/api/template;
        proxy_method POST;
        proxy_pass_request_headers off;
        proxy_set_header Content-Type "application/json";
        proxy_set_header Authorization "Bearer $hass_token";
        proxy_set_body '{"template": "{{ 1 if is_state(\'binary_sensor.on_vacation\', \'on\') else 0 }}"}';
    }

    location = /custom-api/states/sensor.custom_thermostat_api_data {
        proxy_pass http://127.0.0.1:8123/api/template;
        proxy_method POST;
        proxy_pass_request_headers off;
        proxy_set_header Content-Type "application/json";
        proxy_set_header Authorization "Bearer $hass_token";
        proxy_set_body '{"template": "{{ states.sensor.custom_thermostat_api_data.state }}"}';
    }
}
